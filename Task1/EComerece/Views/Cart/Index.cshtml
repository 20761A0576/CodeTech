@model List<EComerece.Models.CartItem>

<h2>Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price</td>
                <td>@(item.Quantity * item.Product.Price)</td>
                <td>
                    @Html.ActionLink("Remove", "RemoveFromCart", new { id = item.ProductId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
}

@Html.ActionLink("Continue Shopping", "Index", "Products", new { @class = "btn btn-primary" })
