@model IEnumerable<EComerece.Models.Product>

<h2>Product Listings</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>
                @Html.ActionLink("Add to Cart", "AddToCart", "Cart", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("View Cart", "Index", "Cart", new { @class = "btn btn-warning" })
